{
  "name": "JSONVue",
  "icons": {
    "16": "resources/jsonvue16.png",
    "48": "resources/jsonvue48.png",
    "128": "resources/jsonvue128.png"
  },
  "version": "0.1.1",
  "description": "Validate and view JSON documents",
  "options_page": "options.html",
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*",
        "ftp://*/*",
        "file:///*"
      ],
      "js": [
        "js/content.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    "css/jsonvue.css",
    "css/jsonvue-core.css",
    "css/content-error.css",
    "resources/close-icon.gif",
    "resources/error-icon.gif"
  ],
  "permissions": [
    "clipboardWrite",
    "contextMenus"
  ],
  "manifest_version": 2
}